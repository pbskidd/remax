}
.subt {
  /* Center the element horizontally */
  text-align: center;
  margin-bottom: 30px;
  color: #a39a8e;
}

.showcase-item img {
    display: block;
    width: 100%;
    height: auto;
    margin-top: 1rem;
    border-radius: 0.5rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1); /* optional styling */
}

/* 1) Make sure each solution-item can be a positioning context */
.solution-item {
  position: relative;
  overflow: visible; /* ensure arrows aren’t clipped */
}

/* 2) Desktop: arrows pointing right, 30×90px, vertically centered */
@media (min-width: 768px) {
  .solution-item:not(:last-child)::after {
    content: "";
    position: absolute;
    top: 50%;
    right: -15px;      /* half the arrow’s width, so it just touches */
    width: 30px;
    height: 90px;
    background: url('./img/arrow2.svg') no-repeat center center;
    background-size: contain;
    transform: translateY(-50%);
    transform-origin: center;
    pointer-events: none;
    z-index: 1;
  }
}

/* 3) Mobile: arrows pointing down (rotate 90°), same SVG, horizontally centered */
@media (max-width: 767px) {
  .solution-item:not(:last-child)::after {
    content: "";
    position: absolute;
    bottom: -15px;     /* half the arrow’s *rotated* height, so it touches */
    left: 50%;
    width: 30px;
    height: 90px;
    background: url('./img/arrow.svg') no-repeat center center;
    background-size: contain;
    transform: translateX(-50%) rotate(90deg);
    transform-origin: center;
    pointer-events: none;
    z-index: 1;
  }
}

