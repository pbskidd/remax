.option-item img {
  display: block;       /* ensures no inline whitespace */
  width: 100%;          /* scale to container width */
  height: auto;         /* maintain aspect ratio */
  margin-top: 1rem;     /* spacing from existing content */
  border-radius: 0.5rem;/* optional: soften the corners */
  box-shadow: 0 2px 8px rgba(0,0,0,0.1); /* optional styling */
}

.maint {
  /* Remove bottom margin */
