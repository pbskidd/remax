/* ---------- MOBILE NAV ---------- */
.nav-toggle {
  display: none;               /* hidden on desktop */
  background: none;
  border: none;
  cursor: pointer;
  z-index: 1100;               /* above the sliding panel */
}

/* three lines */
.nav-toggle .hamburger,
.nav-toggle .hamburger::before,
.nav-toggle .hamburger::after {
  content: "";
  display: block;
  width: 25px;
  height: 3px;
  margin: 5px 0;
  background: var(--dark-color);
  transition: var(--transition);
  border-radius: 2px;
}

/* animate into an “X” when open */
.nav-toggle.active .hamburger {
  background: transparent;
}
.nav-toggle.active .hamburger::before {
  transform: translateY(8px) rotate(45deg);
}
.nav-toggle.active .hamburger::after {
  transform: translateY(-8px) rotate(-45deg);
}

/* slide-in panel */
@media (max-width: 768px) {
  .nav-toggle { display: block; }

  header nav {
    position: fixed;
    top: 0;
    right: 0;
    width: 70%;
    max-width: 300px;
    height: 100vh;
    background: #fff;
    box-shadow: var(--box-shadow);
    padding-top: 100px;        /* clears the header height */
    transform: translateX(100%);
    transition: var(--transition);
  }
  header nav.open {            /* toggled class from JS */
    transform: translateX(0);
  }

  header nav ul {
    flex-direction: column;
    align-items: flex-start;
    display: flex;             /* override the earlier 'display:none' */
  }
  header nav ul li {
    margin: 20px 30px;
  }
}

.bump_down{
    margin-top: 30px;
}

/* default (desktop) – hide it */
.mobile-only { display: none; }

/* reveal only when the hamburger exists */
@media (max-width: 768px) {        /* same breakpoint as the menu */
  .mobile-only { display: block; }
}

